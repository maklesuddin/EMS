
@model Models.SearchCriteria.ParticipantSearchCriteria

@{ 
    ViewBag.Title = "Index";
   Layout = "~/Views/Share/_LayoutShare.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Dashboard
            <small>Control panel</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <section class="col-lg-12">
                <!-- Chat box -->
                <div class="box box-success">
                    <div class="box-header">
                        <h3 class="box-title">All Participant Information</h3>
                    </div>
                    
                        @using (Html.BeginForm("Index", "Participant", FormMethod.Get, new { @class = "form-horizontal" }))
                        {
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="Name" class="col-md-3 control-label">Name</label>
                                        <div class="col-md-9">
                                            <input id="searchTextbox" name="Name" class="form-control" type="text" placeholder="Name" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="Organization" class="col-md-3 control-label">Organization</label>
                                        <div class="col-md-9">
                                            @Html.DropDownListFor(c => c.OrganizationId, Model.OrganizationList, "Select Organization", new { @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="Course" class="col-md-3 control-label">Course</label>
                                        <div class="col-md-9">
                                            @Html.DropDownListFor(c => c.CourseId, new List<SelectListItem>(), new { @class = "form-control", id = "courseListDD" })
                                        </div>
                                    </div>

                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="Email" class="col-md-3 control-label">Email</label>
                                        <div class="col-md-9">
                                            <input id="searchTextbox" name="Email" class="form-control" type="text" placeholder="Email" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="Country" class="col-md-3 control-label">Country</label>
                                        <div class="col-md-9">
                                            @Html.DropDownListFor(c => c.CountryId, Model.CountryList, "Select Country", new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="City" class="col-md-3 control-label">City</label>
                                        <div class="col-md-9">
                                            @Html.DropDownListFor(c => c.CityId, new List<SelectListItem>(), new { @class = "form-control", id = "cityListDD" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-3 pull-right">
                                            <input id="searchButton" type="submit" value="Search" class="btn-success form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                        <hr />
                        <p>
                            @Html.ActionLink("Create New Participant", "Entry")
                        </p>

                        <div class="table-responsive">
                            <table class="table table-bordered table-striped table-hover">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.OrganizationId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CourseId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CityId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CountryId)
                                    </th>
                                    <th>Action</th>
                                </tr>

                                @foreach (var item in Model.ParticipantList)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Organization.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Course.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.City.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Country.Name)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>

                    </div>
                
            </section>
        </div>
        <!-- /.row (main row) -->

    </section>
    <!-- /.content -->
</div>


































